package Arrays;

public class evenElements {

	public static void main(String[] args) {
		// In this program we are going to find out the even elements in an array
		
		int arr[] = {2,4,1,3,5,6,8,7,9};
		
		System.out.print("Printing the original array: ");
		for(int i=0; i<arr.length; i++) {
			System.out.print(arr[i] + "   ");
		}
		
		System.out.println("\n");
			System.out.println("The even elements in the array are: ");
			
			System.out.print("Orginal array" + "  |  " + "Even Ele");
			
		for(int i=0; i<arr.length; i++) {
			
			if(arr[i]%2==0) {
				System.out.println(arr[i] + "   ");
			}
		}

	}

}
