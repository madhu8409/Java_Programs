package Arrays;

import java.util.Scanner;

public class testingMultiplication {

	public static void main(String[] args) {
		// This program is done using the user input
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter your dimensions: ");
		
		
		int n;
		n=sc.nextInt();
		
		int a[][]= new int [n][n];
		int b[][]= new int [n][n];
		System.out.println("Enter the value for First matrix: ");
		
		for(int i=0; i<n; i++) {
			for(int j=0; j<n; j++) {
				a[i][j]= sc.nextInt();
			}
		}
		
		System.out.println("Enter the value for Second Matrix");
		for(int i=0; i<n; i++) {
			for(int j=0; j<n; j++) {
				b[i][j]=sc.nextInt();
			}
		}
		int c[][]= new int [n][n];
		
		System.out.println(" The calculation begin from here: ");
		
		for(int i=0; i<n; i++) {
			for(int j=0; j<n; j++) {
				for(int k=0; k<n; k++) {
					c[i][j] += a[i][k] * b[k][j];
				}
			}
		}
		
		System.out.println("Printing the matrix: ");
		for(int i=0;i<n;i++) {
			for(int j=0; j<n; j++) {
				System.out.println(c[i][j]+" ");
			}
			System.out.println();
		}

	}

}
